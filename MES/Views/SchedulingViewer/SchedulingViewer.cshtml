
@{
    ViewBag.Title = "SchedulingViewer";
    Layout = "~/Views/Shared/_MesLayout.cshtml";
}

<!--START date range picker-->
<link href="~/assets/DayRangePicker/daterangepicker.min.css" rel="stylesheet" />

<style type="text/css">
    /*Style of event*/
    .event-style {
        color: #ffffff;
        font-size: 11px;
        border-radius: 3px;
        border: 1px solid #7cb316;
        box-shadow: 0px 2px 3px rgba(000,000,000,0.3), inset 0px 0px 2px rgba(255,255,255,0.8);
    }

    .event-bg {
        background: #bfe600;
        background: -moz-linear-gradient( top, #a2c200 0%, #8aaa00);
        background: -webkit-gradient( linear, left top, left bottom, from(#a2c200), to(#8aaa00));
    }

    /*Set css for selected event*/
    .scheduler_default_selected .scheduler_default_event_inner {
        opacity: 0.5;
        border: 2px solid yellow;
        border-radius: 3px;
    }

    .bubble_default_main_inner {
        z-index: 1051;
    }

    .bubble_default_main {
        z-index: 1051 !important;
    }
</style>

<!-- widget grid -->
<section id="widget-grid" class="">
    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-sm-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-green" id="wid-id-mes" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
                <header>
                    <h2><strong>MES Schedules</strong></h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget content -->
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" id="txtDateRange" class="form-control" placeholder="Date range">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <select id="drpFactory" class="form-control" data-placeholder="Factory"></select>
                                        </div>
                                    </div>

                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <select id="drpBuyer" class="form-control" data-placeholder="Buyer"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" id="txtAoNumber" class="form-control" placeholder="AO Number" />
                                        </div>
                                    </div>

                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" id="txtStyleInfo" class="form-control" placeholder="Style Info" />
                                        </div>
                                    </div>

                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <button id="btnSearchMesPkg" class="form-control btn btn-primary">
                                                <span class="glyphicon glyphicon-search"></span> Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <article class="col-sm-12">
                                <div id="dpMes"></div>
                            </article>
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->
    </div>
    <!-- end row -->

</section>
<!-- end widget grid -->

@section Scripts{
    <!--DayPilot js-->
    <script src="~/Assets/DayPilotProJavaScriptTrial-8.4.3033/daypilot-all-pro.min.js"></script>
    <!--block UI-->
    <script src="~/Assets/jquery.blockUI/jquery.blockUI.js"></script>
    <!--Date range picker-->
    <script src="~/assets/DayRangePicker/daterangepicker.min.js"></script>
    <script src="~/js/mes/mes-common.js?v=1.0.2"></script>
    <script src="~/js/mes/scheduling_viewer/schdueling_viewer.js?v=1.0.1"></script>
    <script src="~/js/mes/scheduling_viewer/scheduling_viewer_event.js"></script>
}
