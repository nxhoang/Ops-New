
@{
    ViewBag.Title = "BOM";
    Layout = "~/Views/Shared/_MesLayout.cshtml";
}

<!--START date range picker-->
<link href="~/assets/DayRangePicker/daterangepicker.min.css" rel="stylesheet" />

<style>
    /*Set color for tab*/
    .jarviswidget header:first-child .nav-tabs li a {
        color: #333 !important;
    }
</style>

<!-- widget grid -->
<section id="widget-grid" class="">
    <!--Add Package Group partial view-->
    @Html.Partial("~/Views/PartialView/PackageGroup.cshtml", null)

    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-sm-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-green" id="wid-id-mtop" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-sortable="false">

                <header>
                    <h2><strong>Bill Of Materials</strong></h2>
                </header>

                <!-- widget div-->
                <div>

                    <!-- widget content -->
                    <div class="widget-body">
                        <!--AOMTOP Schedule-->
                        <div class="row">

                            <article class="col-sm-12">
                                <!-- new widget -->
                                <div class="jarviswidget" id="wid-id-mtop-tap" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">

                                    <header>
                                        <span class="widget-icon"> <i class="fa fa-cubes txt-color-darken"></i> </span>
                                        <h2>BOM</h2>

                                        <ul class="nav nav-tabs pull-right in" id="myTab">
                                            <li class="active">
                                                <a id="achAomtop" data-toggle="tab" href="#s1"><i class="fa fa-clock-o"></i> <span class="hidden-mobile hidden-tablet">Engineering BOM</span></a>
                                            </li>

                                            <li>
                                                <a id="achQcoRanking" data-toggle="tab" href="#s2"><i class="fa fa-list-ol"></i> <span class="hidden-mobile hidden-tablet">Module BOM</span></a>
                                            </li>
                                        </ul>

                                    </header>

                                    <!-- widget div-->
                                    <div class="no-padding">

                                        <div class="widget-body">
                                            <!-- content -->
                                            <div id="myTabContent" class="tab-content">
                                                <div class="tab-pane fade active in padding-10 no-padding-bottom" id="s1">
                                                    <div class="row no-space">
                                                        <div class="col-sm-12">
                                                            <table id="tbEngineeringBOM"></table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- end s1 tab pane -->

                                                <div class="tab-pane fade in padding-10 no-padding-bottom" id="s2">
                                                    <div class="row no-space">
                                                        <div class="col-sm-12">
                                                            <table id="tbModuleBOM"></table>
                                                        </div>
                                                    </div>                                                    
                                                </div>
                                                <!-- end s2 tab pane -->
                                            </div>

                                            <!-- end content -->
                                        </div>

                                    </div>
                                    <!-- end widget div -->
                                </div>
                                <!-- end widget -->

                            </article>

                        </div>
                        <!--end AOMTOP Schedule-->
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->

        </article>
        <!-- WIDGET END -->

    </div>
    <!-- end row -->

</section>
<!-- end widget grid -->

@section Scripts{
    <script src="~/js/mes/mes-common.js?v=1.0.2"></script>

    <!--package group partial view-->
    <script src="~/js/mes/partial-view/package-group.js?v=1.0.4"></script>
    <script src="~/js/mes/partial-view/package-group-event.js?v=1.0.2"></script>

    <!--Date range picker-->
    <script src="~/assets/DayRangePicker/daterangepicker.min.js"></script>

    <!--jqgrid libary-->
    <script src="~/js/plugin/jqgrid/jquery.jqGrid.min.js"></script>
    <script src="~/js/plugin/jqgrid/grid.locale-en.min.js"></script>

    <script src="~/js/mes/BOM/bom.js?v=1.0.1"></script>
    <script src="~/js/mes/BOM/bom-event.js"></script>

    <script>
        $(function () {
            initBOMPage();
        });
    </script>

}