@*<link href="~/css/ops/pages/gridCommon.css" rel="stylesheet" />*@

<div class="row">
    <div class="col-sm-6 col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Action code: </label>
                <div class="col-sm-6 selec2-custom">
                    <select id="drpActionCodeTemplate" class="form-control" data-placeholder="Select action code"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <table id="tbActionCodeTemplate"></table>
                    <div id="pagerTemplate" style="text-align:center; margin:0; padding:0;"></div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6 col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Process name: </label>
                <div class="col-sm-6">
                    <select class="select2-selection--multiple form-control" multiple="multiple" id="selectProcessName"></select>
                </div>
                <button type="button" id="btnAddProcessName" class="btn-menu btn mr-1 shadow-z-2 btn-success">
                    <span class="glyphicon glyphicons-shower"></span>Add
                </button>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <table id="tbProcessName"></table>
                    <div id="pagerProcessName" style="text-align:center; margin:0; padding:0;"></div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Add Template -->
<div class="modal modal-custom fade modal-custom-width" id="mdlAddTemplate" style="z-index:9999" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Template</h4>
            </div>
            <div class="modal-body">
                <div class="modal-body-custom">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="txtNewTemplate"> New Template </label>
                                    <div class="col-sm-4">
                                        <input type="text" id="txtNewTemplate" class="form-control" />
                                    </div>
                                    <button type="button" id="btnAddNewTemplate" class="btn-menu">
                                        <span class="glyphicon glyphicons-shower"></span>Add New
                                    </button>
                                    @*<button type="button" id="btnDeleteTemplate" class="btn btn btn-primary btn-modal">Delete</button>*@
                                </div>
                            </form>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <table id="tbAllTemplate"></table>
                        <div id="pagerAllTemplate" style="text-align:center; margin:0; padding:0;"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnAddTemplateActioncode" class="btn btn btn-primary btn-modal">Add</button>
                <button type="button" class="btn btn btn-primary btn-modal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/ops/uicontrol/OpsMaster.js"></script>
    <script src="~/js/ops/Pages/process-template.js?v=1.0"></script>

    <script>

        $(document).ready(function () {
            OpenReadySearch();
            GetActionCodeTemplate("ActionCode");
            jqGridTemplate('');
            jqGridProcessNameTemplate('', '', '');
            LoadTemplateByActionCode();
            EventBtnClick();
            jqGridAddTemplate();
            GetSelectProcessName();
            GetRoleProcessTemplate();

            $("#windowsHeight").height($(window).height() - 150);
        });

    </script>
}
@*END ADD: HA*@

