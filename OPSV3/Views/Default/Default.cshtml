        //START ADD - SON) 16/Jan/2021 - set height
        const adjustHeightOfContent = () => {
            $(window).on('resize', function () {
                const screenHeight = $(window).height();
                const divContentHeight = screenHeight - (60 + 75);//60 is height of menu on top
                $('#divUserProfile').height(divContentHeight);

                //accordion content height
                const contentAccordionHeight = divContentHeight - 174;
                const gridHeight = contentAccordionHeight - 120;
                $('#tbHistoryPlan').setGridHeight(gridHeight);
                $('#tbOpsMt').setGridHeight(gridHeight);
                $('#tbOpsLink').setGridHeight(gridHeight);
                $('#tbStyle').setGridHeight(gridHeight);

                setTimeout(() => {
                    //put this function in settimeout to apply height for accordion content.
                    $('.ui-accordion-content').css('height', `${contentAccordionHeight}px`);
                }, 0);
            }).trigger('resize');
         }
