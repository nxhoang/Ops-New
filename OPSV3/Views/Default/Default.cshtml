        function SetCalenda() {

            $('#datepicker').datepicker({
                format: "mm/yyy",
                todayHighlight: true,
                sideBySide: true,
                icons: {
                    previous: 'glyphicon glyphicon-backward',
                    next: 'glyphicon glyphicon-chevron-right'
                }

            });
            $('#datepicker').on('changeDate', function () {
                $('#my_hidden_input').val(
                    $('#datepicker').datepicker('getFormattedDate')
                );
            });
        }

        function Accordion() {

            $("#accordion").accordion({
                header: "h2",
                collapsible: true
            });
        }

