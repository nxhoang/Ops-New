            </div>
            <div class="modal-body">
                <div class="modal-body-custom">
                    <div class="row">
                        <input type="hidden" id="hdOpNameId" />
                        <input type="hidden" id="hdSubGridId" />
                        <input type="hidden" id="hdGridRowId" />
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="col-xs-12">
                                <table id="tbMachine"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSelectMachine" class="btn btn btn-primary btn-modal">Select</button>
                <button type="button" class="btn btn btn-primary btn-modal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- /Modal select machine -->
