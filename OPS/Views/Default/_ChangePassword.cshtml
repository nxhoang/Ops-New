<div id="ChangePass" class="modal fade modal-custom pattern-bom" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" style="max-width:400px;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="hTitle">Change password</h4>
            </div>
            <div class="modal-body">
                <div id="validateChangePass" class="alert alert-danger" style="display: none"><label id="showChangePass"></label>
                </div>
                <div class="modal-body-custom" id="divUpdate">
                    <div class="contain">
                        <table class="tb-contain">
                            <tr>
                                <td>
                                    <p class="table-title">Old password:</p>
                                </td>
                                <td colspan="3">
                                    <input id="txtOlpass" class="form-control infortop10" type="password" value="" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="table-title">New password</p>
                                </td>
                                <td>
                                    <input id="txtNewpassword" class="form-control infortop10" type="password" value="" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="table-title">Confirm password</p>
                                </td>
                                <td style="float: left">
                                    <input id="txtConfirmpassword" class="form-control infortop10" type="password" value="" />
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><input type="button" onclick="ChangePass();" value="Change password" class="btn btn btn-primary form-control infortop10" /></td>
                            </tr>
                        </table>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelAddPattern" class="btn btn-primary btn-modal" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
