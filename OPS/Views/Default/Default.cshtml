    function SetCalenda() {
        $('#datepicker').datepicker({
            format: "mm/yyy",
            todayHighlight: true,
            sideBySide: true,
            icons: {
                previous: 'glyphicon glyphicon-backward',
                next: 'glyphicon glyphicon-chevron-right'
